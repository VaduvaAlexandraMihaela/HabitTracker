{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}
    <div class="container">
        <div class="jumbotron" style="margin-top: 20px; background-image : url({{ asset('../img/habit-banner.png') }});
        background-size: cover;" > </div>
    </div>
    <main role="main">
        <div class="container h-50">
            <div class="jumbotron w-100" style="background:cadetblue !important" >
                <div class="container h-70">
                <div class="d-flex align-items-center justify-content-center h-100">
                    <div class="d-flex flex-column"><h1 class="h3 mb-3 fw-normal">Register now to the habit tracking app to get access to our functionalities</h1></div>
                </div>
            {{ form_start(registrationForm) }}
                <div class="d-flex align-items-center justify-content-center h-100">
                    <div class="d-flex flex-column">
                {{ form_row(registrationForm.email) }}
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-center h-100">
                <div class="d-flex flex-column">
                {{ form_row(registrationForm.plainPassword) }}
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-center h-100">
                <div class="d-flex flex-column">
                {{ form_row(registrationForm.agreeTerms) }}
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-center h-100">
                <div class="d-flex flex-column">
                    <div class="input-group">
                        <div class="input-group-append">
            <button
                    type="submit"
                    class="btn btn-secondary">
                Register
            </button>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_end(registrationForm) }}

            </div>
        </div>
        <div>
        </div>
    </main>
{% endblock %}