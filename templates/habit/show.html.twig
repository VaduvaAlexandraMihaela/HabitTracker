{% extends 'base.html.twig' %}

{% block title %}Habit{% endblock %}

{% block body %}
    <h1>Habit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ habit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ habit.Name }}</td>
            </tr>
            <tr>
                <th>TimeSpent</th>
                <td>{{ habit.TimeSpent }}</td>
            </tr>
            <tr>
                <th>TimeStart</th>
                <td>{{ habit.TimeStart ? habit.TimeStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TimeEnd</th>
                <td>{{ habit.TimeEnd ? habit.TimeEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_habit_index') }}">back to list</a>

    <a href="{{ path('app_habit_edit', {'id': habit.id}) }}">edit</a>

    {{ include('habit/_delete_form.html.twig') }}
{% endblock %}
