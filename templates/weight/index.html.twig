{% extends 'base.html.twig' %}

{% block title %}Weight index{% endblock %}

{% block body %}
    <h1>Weight index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>WeightLost</th>
                <th>Goal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weight in weights %}
            <tr>
                <td>{{ weight.id }}</td>
                <td>{{ weight.Value }}</td>
                <td>{{ weight.WeightLost }}</td>
                <td>{{ weight.Goal }}</td>
                <td>
                    <a href="{{ path('app_weight_show', {'id': weight.id}) }}">show</a>
                    <a href="{{ path('app_weight_edit', {'id': weight.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_weight_new') }}">Create new</a>
{% endblock %}
